{
  "name": "tapestry-extension",
  "version": "0.1.1",
  "description": "Browser extension that integrates with Fabric AI patterns",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n esm,iife \"vite build --watch --mode development\" \"vite build --watch --mode development -c vite.content.config.ts\"",
    "build": "vite build && vite build -c vite.content.config.ts",
    "lint": "eslint src *.config.js *.config.ts --ext .ts,.js,.svelte",
    "lint:fix": "eslint src *.config.js *.config.ts --ext .ts,.js,.svelte --fix",
    "format": "prettier --write 'src/**/*.{ts,svelte,css}' '*.config.{js,ts}' '*.json'",
    "format:check": "prettier --check 'src/**/*.{ts,svelte,css}' '*.config.{js,ts}' '*.json'",
    "check": "tsc --noEmit && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@lucide/svelte": "^0.542.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.6",
    "@types/node": "^24.3.1",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.7",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.12.1",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.38.6",
    "svelte-check": "^4.3.1",
    "svelte-eslint-parser": "^1.3.1",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dompurify": "^3.2.6",
    "marked": "^16.2.1",
    "turndown": "^7.2.1",
    "zod": "^4.1.5"
  }
}
